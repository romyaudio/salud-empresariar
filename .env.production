# Configuración de Producción para AWS Amplify
# Estas variables se configuran en la consola de Amplify

# Información de la aplicación
NEXT_PUBLIC_APP_NAME=Budget Tracker
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_CURRENCY=COP

# Configuración de entorno
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# AWS Amplify Auth Configuration
# NEXT_PUBLIC_USER_POOL_ID=us-east-1_XXXXXXXXX
# NEXT_PUBLIC_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS Amplify GraphQL API Configuration
# NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxxxxxxxx.appsync-api.us-east-1.amazonaws.com/graphql
# NEXT_PUBLIC_AWS_REGION=us-east-1

# Demo Mode (set to false when AWS is configured)
NEXT_PUBLIC_DEMO_MODE=true

# URLs base (se configurarán automáticamente por Amplify)
# NEXT_PUBLIC_API_URL=https://api.tu-dominio.com
# NEXT_PUBLIC_APP_URL=https://tu-app.amplifyapp.com

# Configuración de AWS Amplify (se configuran automáticamente)
# AWS_REGION=us-east-1
# AWS_AMPLIFY_APP_ID=tu-app-id

# Configuración de análitics (opcional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX